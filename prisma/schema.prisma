generator client {
  provider        = "prisma-client-js"        // ESM, nuevo cliente
  output          = "../src/generated/prisma" // Ruta relativa al schema.prisma
  previewFeatures = ["driverAdapters"]        // Opcional
  moduleFormat    = "esm"                     // Formato ESM
}

datasource db {
  provider = "postgresql"                     // Cambiado a Postgres
  url      = env("DATABASE_URL")
}

model Notification {
  id          BigInt   @id
  message     String
  read        Boolean
  inserted_at DateTime

  @@map("notifications")
}